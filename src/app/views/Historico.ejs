  <br><h1> Histórico das Matrículas </h1><br><br>
  
  <div class="mid-content">
    <div class="mid-left">
      <%for(var i=0; i<eventosSelecionados.length; i++) {%>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-md-4">
              <p class = "card-title">Foto do evento:</p>
              <img src="/image/<%-eventosSelecionados[i].foto%>" class="card-img" alt="imagem evento">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"> Nome do evento: <%-eventosSelecionados[i].nome%></h5>
                  <small class="form-text text-muted">ID do evento: <%-eventosSelecionados[i].codigo%></small>
                  <div class="input-group mb-3 justify-content-end">
                    <div class="input-group-prepend" id="button-addon3">
                      <p class= "card-title"> Quantidade: </p><%-produtosSelecionados[i].quantidade%>
                      <p class= "card-text"> Valor Total: R$ <%-produtosSelecionados[i].totalDoEvento%>
                    </div>
                  </div>
                </div>
            </div>
          </div>
        </div>
        <%}%>
    </div>
    <div class="mid-right">
      <%if(valorTotalF==0){%>
        <div class="carrinhoVazio">Seu carrinho está vazio!</div>
      <%}else{%> 
        <div class="card mb-1">
          <div class="col-md-12">
            <div class="row no-gutters">
              <div class="card-body">
                <h5 class="card-title">Seu carrinho</h5>
                <p class="card-text"></p>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <%if(temCarrinho>0){%> 
                      <button class="btn btn-primary" id="btnInserir" type="button">Finalizar</button>
                    <%}else{%>
                      <a href="/login" class="btn btn-primary" id="btnEdCarrinho" type="button">Cadastre-se para finalizar a sua compra!</a>
                    <%}%>
                    <button class="btn btn-secondary" id="btnAtualiza" type="button" disabled> Valor total: R$<%-valorTotalF%> </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%}%> 
    </div>
  </div>
  

