  <div class="mid">
    <div class="row row-cols-2 row-cols-md-4  ">
      <%for(var i =0; i<eventos.length; i++) {%>
        <form action="/insertEventosHistorico" method="post">
          <div class="col mb-4">
            <div class="card">
              <p class = "card-title">Foto do evento:</p>
              <img src="/imagens/<%-eventos[i].foto%>" class="card-img-top">
              <div class="card-body">
                <h5><p class="card-title"> Nome do Evento: </p><%-eventos[i].nome_evento%></h5> 
                <small class="form-text text-muted">ID do evento: <%-eventos[i].id_evento%>
                  <input type="number" class="form-control" id="id_evento" name="id_evento" min="1" value="<%-eventos[i].id_evento%>" style="display: none;">
                </small>
                <p class="card-text"> Descrição do Evento: <%-eventos[i].descricao_evento%></p>
                <div class="card-footer">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend" id="button-addon3">
                    <p class="card-text">Ingressos em estoque:<%-eventos[i].ingressos%></p>
                    <p class= "card-text"> Preço: R$ <%-produtos[i].preco%>
                    </div>
                    <p class= "card-title"> Quantidade: </p><input type="number" class="form-control" id="quantidadeing" name="quantidadeing" placeholder="Quantidade de eventos" min="1" required>
                    <button class="btn btn-primary" id="btnAddCarrinho" type="submit" onclick= "funcaoAdicionadoAoCarrinho;"> Matricular </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      <%}%>
